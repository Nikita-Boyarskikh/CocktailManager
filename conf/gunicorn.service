[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/app/bar
ExecStart=/usr/local/bin/gunicorn --workers 3 --bind 46.101.126.140:8443 --proxy-allow-from "*" --forwarded-allow-ips "*" --access-logfile=/app/bar/log/gaccess.log --log-file=/app/bar/log/gerror.log --log-level=debug --max-requests=1024 --certfile=/app/bar/ssl/webhook_cert.pem --keyfile=/app/bar/ssl/webhook_cert.key uwsgi:app

[Install]
WantedBy=multi-user.target